<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView android:id="@+id/messages_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText android:id="@+id/message_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_message_edittext"
            android:inputType="textMultiLine"
            android:maxLines="5" />

        <Button android:text="@string/button_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSendMessageButtonClick" />
        
    </LinearLayout>

</LinearLayout>